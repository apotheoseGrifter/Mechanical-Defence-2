<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

	<ThingDef Name="BuildingBase" Abstract="True">
		<category>Building</category>
		<soundImpactDefault>BulletImpactMetal</soundImpactDefault>
		<selectable>true</selectable>
		<drawerType>MapMeshAndRealTime</drawerType>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<repairEffect>Repair</repairEffect>
	</ThingDef>
  
  <ThingDef ParentName="BuildingBase" Name="WallBase" Abstract="True">
    <defName>Wall</defName>
    <eType>Wall</eType>
    <label>wall</label>
    <category>Building</category>
    <thingClass>Building</thingClass>
    <description>An impassable wall. Capable of holding up a roof.</description>
    <!--<graphicPathFolderAppearances>Things/Building/Linked/Wall</graphicPathFolderAppearances>-->
    <uiIconPath>Things/Building/Linked/WallSmooth_MenuIcon</uiIconPath>
    <blueprintgraphicPathSingle>Things/Building/Linked/Wall_Blueprint_Atlas</blueprintgraphicPathSingle>
    <statBases>
      <MaxHealth>300</MaxHealth>
      <Flammability>0</Flammability>
    </statBases>
    <costStuffCount>6</costStuffCount>
    <altitudeLayer>BuildingTall</altitudeLayer>
    <passability>Impassable</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>1</fillPercent>
    <coversFloor>true</coversFloor>
    <tickerType>Never</tickerType>
    <rotatable>false</rotatable>
    <selectable>true</selectable>
    <neverMultiSelect>true</neverMultiSelect>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <holdsRoof>false</holdsRoof>
    <staticSunShadowHeight>1.0</staticSunShadowHeight>
    <blockLight>true</blockLight>
    <madeFromStuff>true</madeFromStuff>
    <building>
      <ignoreNeedsPower>true</ignoreNeedsPower>
    </building>
    <damageMultipliers>
      <li>
        <damageDef>Bomb</damageDef>
        <multiplier>3</multiplier>
      </li>
    </damageMultipliers>
    <linkDrawerType>CornerFiller</linkDrawerType>
    <linkFlags>
      <li>Wall</li>
    </linkFlags>
    <filthLeavings>
      <SlagRubble>2</SlagRubble>
    </filthLeavings>
  </ThingDef>
	
	<ThingDef ParentName="WallBase">
		<defName>MD2MechEmbrasure</defName>
		<eType>Wall</eType>
		<label>mechanical embrasure</label>
    <thingClass>MechanicalDefence2.MechWall.Building_MechWallEmbrasure</thingClass>
		<description>A mechanical wall which has been opened to act as an embrasure.</description>
    <fillPercent>0.99</fillPercent>
    <uiIconPath>UI/Icons/Metal</uiIconPath>
    <graphicPathSingle>Buildings/Embrasure/Embrasure</graphicPathSingle>
		<Comps>
		  <li>
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>15</basePowerConsumption>
        <transmitsPower>true</transmitsPower>
		  </li>
		</Comps>
	</ThingDef>
	
</ThingDefs>
<?xml version="1.0" encoding="utf-8" ?>
<Buildings>


  <ThingDef Name="BuildingBase" Abstract="True">
    <category>Building</category>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
  </ThingDef>

  <!-- Coal Feeder -->
  <ThingDef ParentName="BuildingBase">
    <defName>MD2ManufacturingControlConsole</defName>
    <eType>BuildingComplex</eType>
    <label>control console</label>
    <description>control console.</description>
    <thingClass>MechanicalDefence2.ManufacturingPlant.ManufacturingControlConsole</thingClass>
    <graphicPath>Default</graphicPath>
    <graphicClass>Graphic_Single</graphicClass>
    <altitudeLayer>Waist</altitudeLayer>
    <passability>Impassable</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>0.7</fillPercent>
    <statBases>
      <WorkToMake>330</WorkToMake>
      <MaxHealth>100</MaxHealth>
      <Flammability>1.0</Flammability>
    </statBases>
    <comps>
      <li>
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>20</basePowerConsumption>
        <transmitsPower>false</transmitsPower>
      </li>
    </comps>
    <costList>
      <Steel>40</Steel>
    </costList>
    <tickerType>Normal</tickerType>
    <rotatable>true</rotatable>
    <neverMultiSelect>true</neverMultiSelect>
    <killedLeavings>
      <ChunkSlag>1</ChunkSlag>
    </killedLeavings>
    <filthLeavings>
      <SlagRubble>2</SlagRubble>
    </filthLeavings>
    <designationCategory>Production</designationCategory>
    <staticSunShadowHeight>0.3</staticSunShadowHeight>
    <itemSurface>true</itemSurface>
  </ThingDef>

  <!-- Coal Burner-->
  <ThingDef ParentName="BuildingBase">
    <defName>MD2CoalBurner</defName>
    <eType>BuildingComplex</eType>
    <label>coal burner</label>
    <thingClass>MechanicalDefence2.PowerGen.CoalPowerPlant</thingClass>
    <graphicPath>Buildings/CoalPower/CoalBurner</graphicPath>
    <graphicClass>Graphic_Single</graphicClass>
    <altitudeLayer>BuildingTall</altitudeLayer>
    <passability>Impassable</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>1</fillPercent>
    <statBases>
      <MaxHealth>550</MaxHealth>
      <WorkToMake>4000</WorkToMake>
      <Flammability>1.0</Flammability>
      <Beauty>-60</Beauty>
    </statBases>
    <tickerType>Normal</tickerType>
    <description>Produces electricity from burning coal. Coal is fed into it via a coal feeder placed on the side.</description>
    <size>(2,3)</size>
    <costList>
      <Steel>650</Steel>
    </costList>
    <graphicOverdraw>false</graphicOverdraw>
    <comps>
      <li>
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>-5600</basePowerConsumption>
        <transmitsPower>true</transmitsPower>
      </li>
    </comps>
    <killedLeavings>
      <ChunkSlag>16</ChunkSlag>
    </killedLeavings>
    <filthLeavings>
      <SlagRubble>3</SlagRubble>
    </filthLeavings>
    <rotatable>false</rotatable>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>Power</designationCategory>
    <staticSunShadowHeight>1.0</staticSunShadowHeight>
    <building>
      <soundAmbient>GeothermalPlant_Ambience</soundAmbient>
      <ignoreNeedsPower>true</ignoreNeedsPower>
    </building>
    <constructEffect>ConstructMetal</constructEffect>
  </ThingDef>


</Buildings>